<%= form_with(model: @instagram, local: true ,url: choose_new_or_edit ) do |form| %>

<% if instagram.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(instagram.errors.count, "error") %>
      prohibited this instagram from being saved:</h2>

    <ul>
      <% instagram.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= form.label :image %>
  <%= image_tag(@instagram.image) if @instagram.image.url %>
  <%= form.file_field :image, id: :instagram_image %>
</div>

<div class="field">
  <%= form.label :content %>
  <%= form.text_area :content, id: :instagram_content %>
</div>


  <%= form.submit %>

<% end %>
